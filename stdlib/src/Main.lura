//! Represents a linked list with pure functional constructs, that have two
//! variants:
//!
//! - [`Cons`]: a head of the list
//! - [`Nil`]: the end of the list
@stdlib
public data List (Set a) {
  Cons : [a] => a -> List a -> List a,
  Nil  : [a] => List a;
}

@stdlib
public data Maybe (Set a) {
  Just    : [a] => a -> Maybe a,
  Nothing : [a] => Maybe a;
}

public
head : [Set a] => List a -> Maybe a
head (Cons x _) = Just x
head Nil        = Nothing

Pao : Pao { Pao }
