{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "lib": [
      "ES2019"
    ],
    "outDir": "out",
    "rootDir": "src",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ],
  "references": [
    {
      "path": "./editors/vscode"
    }
  ]
}